/*
 * Persistent feature
 *
 * generator - generator plugin ID
 */

// Persistent feature for entities
feature Persistent {
    generator: 'feature.persistence'
}

// Predefined view to create/modify an entity
view EntityForm {
    data
    title: 'Add new entity'
    remark
    layout {
        header
        panel {
            form {
                title: title
                data: data
            }
            spacer: line
            text: remark
        }
        footer
    }
}
